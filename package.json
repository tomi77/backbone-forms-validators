{
  "scripts": {
    "build": "npm run build-js; npm run uglify",
    "build-js": "coffee --bare --compile --no-header --output dist -- src/*.coffee",
    "uglify": "for FILE in \"bbf-validators\" \"bbf-validators-pl\"; do uglifyjs dist/${FILE}.js --output dist/${FILE}.min.js --compress --mangle; done",
    "test": "karma start",
    "coveralls": "cat coverage/lcov.info | coveralls"
  },
  "devDependencies": {
    "coffee-script": "^1.10.0",
    "coveralls": "^2.11.11",
    "jasmine-core": "^2.4.1",
    "karma": "^1.1.1",
    "karma-coffee-coverage": "^1.1.2",
    "karma-coffee-preprocessor": "^1.0.1",
    "karma-coverage": "^1.1.0",
    "karma-jasmine": "^1.0.2",
    "karma-phantomjs-launcher": "^1.0.1",
    "uglifyjs-folder": "^0.2.1"
  }
}

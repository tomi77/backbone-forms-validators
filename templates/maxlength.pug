extends ./base/layout

block title
  title Backbone-Forms maxlength validator examples

block menu
  +menu('maxlength')

block extraheaders
  script
    :coffee-script
      example = () ->
        @schema = () ->
          name:
            type: 'Text'
            title: 'Name'
            help: 'Enter text shorter than 10 characters'
            validators: [
              type: 'maxlength'
              maxlength: 9
            ]
            editorAttrs:
              autocomplete: 'off'

      document.addEventListener "DOMContentLoaded", example, false
      window.addEventListener "load", example, false
